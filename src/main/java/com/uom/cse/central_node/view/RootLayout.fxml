<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uom.cse.central_node.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Configure">
            <items>
                  <Menu mnemonicParsing="false" text="Agents">
                    <items>
                        <Menu mnemonicParsing="false" text="Windows Agents">
                           <items>
                          <MenuItem mnemonicParsing="false" onAction="#showFilterList" text="Performance Rules" />
                              <MenuItem mnemonicParsing="false" onAction="#showWindowsLogViewer" text="Log Rules" />
                           </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Android Agents">
                           <items>
                              <MenuItem mnemonicParsing="false" text="Performance Rules" />
                           </items>
                        </Menu>
                    </items>
                  </Menu>
                  <MenuItem mnemonicParsing="false" text="Manage CEP Rules" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
